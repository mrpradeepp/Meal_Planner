<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.sample_project.Display_dayplan">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <include
        layout="@layout/app_bar"
        android:id="@+id/app_bar_daylist">
    </include>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="Your Meal Plan for,"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/heading_label"

       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/heading_txt"

        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"

        />
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Breakfast"
        android:id="@+id/bfast_label"
        android:background="@color/colortextviewBackground"

        android:layout_margin="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/bfast_txt"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
       />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Lunch"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lunch_label"
        android:layout_margin="20dp"
        android:background="@color/colortextviewBackground"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text=""
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lunch_txt"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Snacks"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_margin="20dp"
        android:id="@+id/snacks_label"
        android:background="@color/colortextviewBackground"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text=""
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/snacks_txt"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Dinner"
        android:layout_margin="20dp"

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/dinner_label"
        android:background="@color/colortextviewBackground"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text=""
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/dinner_txt"
       />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"
        android:text="REMINDER"
        android:layout_margin="25dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/Reminder_label"
        android:background="@color/colortextviewBackground"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text=""
        android:gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/Reminder_txt"
        />

</LinearLayout>
</ScrollView>